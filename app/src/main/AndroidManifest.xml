        <activity
            android:name=".activities.TirarFotosActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SelecionarIrregularidadeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ResultadoNoTicketActivity"
